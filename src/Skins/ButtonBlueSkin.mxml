<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
             minWidth="21" minHeight="21" 
             alpha.disabled="0.5">
     
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	
	<s:transitions>
		<s:Transition fromState="up" toState="over" autoReverse="true">
			<s:Parallel duration="110">
				<s:Fade target="{glow}"/>			
				<s:AnimateColor target="{color}" />
			</s:Parallel>
		</s:Transition>
	</s:transitions>
	
	<s:Rect id="rect" top="1" left="1" right="1" bottom="1" height="50">
		<s:fill > 
			<s:SolidColor id="color" color.up="#7fc7ff" color.over="#1e90ff" color.down="#bfe9ff" />
		</s:fill>
		<s:filters>
			<s:GlowFilter id="glow" blurX="7" blurY="7" 
						  alpha.up="0" alpha.over="1"
						  color="#7fc7ff" quality="3"/>
		</s:filters>
	</s:Rect>
    <s:Label id="labelDisplay"
             textAlign="left"
             maxDisplayedLines="2"
             horizontalCenter="0" verticalCenter="1" verticalAlign="middle"
			 color.over="#ffffff"
             left="5" right="5" top="2" bottom="2">
    </s:Label>
    
</s:SparkButtonSkin>
