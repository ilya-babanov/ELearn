<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" >
	
	<s:HGroup gap="2" width="100%" paddingLeft="2" paddingRight="2" verticalAlign="middle">
		<s:RichText text="{data.startState}" width="{GlobalConstants.TM_COMMAND_RENDERER_FIELD_WIDTH}" height="100%" 
					paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5" />
		<s:RichText text="{data.readSymbol}" width="{GlobalConstants.TM_COMMAND_RENDERER_FIELD_WIDTH}" height="100%"
					paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5"  />
		<s:RichText text="{data.writeSymbol}" width="{GlobalConstants.TM_COMMAND_RENDERER_FIELD_WIDTH}" height="100%" 
					paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5"/>
		<s:RichText text="{data.action}" width="{GlobalConstants.TM_COMMAND_RENDERER_FIELD_WIDTH}" height="100%" 
					paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5"/>
		<s:RichText text="{data.endState}" width="{GlobalConstants.TM_COMMAND_RENDERER_FIELD_WIDTH}" height="100%" 
					paddingTop="5" paddingBottom="5" paddingLeft="5" paddingRight="5"/>
	</s:HGroup>
	
</s:ItemRenderer>
